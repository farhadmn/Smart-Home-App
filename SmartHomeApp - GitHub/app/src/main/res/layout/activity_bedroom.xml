<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BedRoomActivity"
    >


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Schlafzimmer"
        android:textSize="18sp" />

    <include
        android:id="@+id/navigation"
        layout="@layout/element_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="98dp"
        android:text="Licht" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="-3dp"
        android:text="Aus" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="37dp"
        android:text="Jalousien"
        android:layout_alignLeft="@+id/textView"
        android:layout_marginLeft="-1dp" />

    <SeekBar
        android:id="@+id/seekBar6"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="0dp"
        android:max="3"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="30dp"
        android:text="Alarmanlage" />

    <Switch
        android:id="@+id/switch6"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar6"
        android:layout_alignStart="@+id/seekBar6"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="-4dp"
        android:text="Aus"
        android:layout_marginLeft="70dp"
        android:layout_alignLeft="@+id/seekBar6" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="26dp"
        android:text="Bekleidungsvorschlag"
        android:layout_alignLeft="@+id/textView" />

    <Switch
        android:id="@+id/switch7"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch6"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:text="Aus" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView20"
        android:layout_marginTop="12dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="68dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/stufen"
        android:layout_width="23dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView12"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="48dp"
        android:layout_toStartOf="@+id/seekBar6"
        android:layout_toLeftOf="@+id/seekBar6"
        android:text="0" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch7"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="Outfitvorschlag:"
        android:textSize="16sp" />

</RelativeLayout>
